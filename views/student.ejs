<%-include('./partial/header.ejs')%>
<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <h1 class="alert alert-success text-center">Add new Students</h1>
      <form method="post">
        <div class="mb-3">
          <label for="Name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="mb-3">
          <label for="Age" class="form-label">Age</label>
          <input type="text" class="form-control" id="age" name="age" />
        </div>
        <div class="mb-3">
          <label for="Fee" class="form-label">Fees</label>
          <input type="text" class="form-control" id="fee" name="fees" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <!-- <div class="col-2"></div> -->
    <div class="col-6">
      <h1 class="alert alert-danger text-center">List of Students</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Fees</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% var i=1%> <%data.forEach((item)=>{%>
          <tr>
            <td><%=i++%></td>
            <td><%=item.name%></td>
            <td><%=item.age%></td>
            <td><%=item.fees%></td>
            <td class="d-flex">
              <form action="/student/edit/<%=item._id%>" method="get">
                <button class="btn btn-primary">edit</button>
              </form>
              <form action="/student/delete/<%=item._id%>" method="post">
                <button class="btn btn-danger">delete</button>
              </form>
            </td>
          </tr>
          <%})%>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%-include('./partial/footer.ejs')%>
